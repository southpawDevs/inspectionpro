<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devs.southpaw.com.inspectionpro.layout.ItemDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/item_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorBlack"
                app:srcCompat="@drawable/sheave_image"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/item_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:fontFamily="@font/oxygen"
                android:text="inspection detail"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_method"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:fontFamily="@font/oxygen"
                android:text="inspection detail"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_condition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:fontFamily="@font/oxygen"
                android:text="inspection detail"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/oxygen"
                android:hint="add comment.."/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Add Image +"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryWhite"
                android:fontFamily="@font/oxygen_bold"
                android:layout_margin="10dp"
                android:id="@+id/submit_button"/>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="250dp"
               android:layout_gravity="center"
               android:scaleType="fitCenter"
               android:id="@+id/snapshot_image_view"
               android:background="@color/colorBlack"
               android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORANGE"
                    android:background="@color/colorStatusOrange"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="@font/oxygen_bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GREEN"
                    android:background="@color/colorStatusGreen"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="@font/oxygen_bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RED"
                    android:background="@color/colorStatusRed"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="@font/oxygen_bold"/>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
